{
  "name": "mini-tsenta-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "@prisma/engines",
      "prisma",
      "@swc/core",
      "electron-winstaller"
    ]
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:desktop\" --kill-others --names \"API,DESKTOP\" -c \"bgBlue.bold,bgMagenta.bold\"",
    "dev:api": "npm run dev --workspace api",
    "dev:desktop": "npm run dev --workspace mini-tsenta",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.7.4"
  }
}
